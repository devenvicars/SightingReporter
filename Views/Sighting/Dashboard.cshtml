@{
    int userId = (int)Context.Session.GetInt32("UserId")!;
}

@model List<Sighting>

<h1>UAP Sightings</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Sighted By</th>
            <th>Date</th>
            <th>Believed By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Sighting s in Model)
        {
            <tr>
                <td>
                    <a asp-action="SightingDetails" asp-controller="Sighting" asp-route-id="@s.SightingId"> @s.Title</a>
                </td>
                <td>@s.Owner?.UserName</td>
                <td>@s.FoundDate.ToString("MMM dd, yyyy")</td>
                <td>@s.Believers.Count</td>
                <td>
                    @if (s.OwnerId == userId)
                    {
                        <form asp-action="DeleteSighting" asp-controller="Sighting" asp-route-id="@s.SightingId">
                            <button type="submit" class=" btn btn-danger">Recant</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="BelieveSighting" asp-controller="Sighting" method="post">
                            <input type="hidden" name="sightingId" value="@s.SightingId">
                            @if (s.Believers.Any(b => b.UserId == userId))
                            {
                                <button class="btn btn-secondary" type="submit">No Way!</button>
                            }
                            else
                            {
                                <button class="btn btn-secondary" type="submit">Sounds Legit!</button>
                            }
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>