@model LoginUser

<h3>login</h3>

<form asp-action="Login" asp-controller="User" method="post">

    <div class="mb-3">
        <label asp-for="LoginEmail" class="form-label"></label>
        <input asp-for="LoginEmail" class="form-control">
        <span asp-validation-for="LoginEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoginPassword" class="form-label"></label>
        <input asp-for="LoginPassword" class="form-control">
        <span asp-validation-for="LoginPassword" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Login</button>
</form>